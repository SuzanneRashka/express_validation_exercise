<% include partials/header %>


<div>
    <form class="" action="/signup" method="post">
      <%# Add form validations for:
      Username: Required. Must be more than 6 characters, must start with a letter, and no punctuation.
      author: Required. Must be more than 8 characters with atleast One letter, one number, and one special character (!?/.,')
      Email: Required. Must be formatted like an email, (something @ something . something)
      First Name: Required.
      Last Name: Required.
      Phone Number: Required. Must be a 10 digit number formatted like: 999-888-9898%>
        <label for="username">User Name
          <input type="text" name="username" value="<%= username %>" placeholder="username">
        </label>
        <label for="password">Password
          <input type="text" name="password" value="<%= password %>" placeholder="password">
        </label>
        <label for="email">Email
          <input type="text" name="email" value="<%= email %>" placeholder="email">
        </label>
        <label for="firstName">First Name
          <input type="text" name="firstName" value="<%= firstName %>" placeholder="firstName">
        </label>
        <label for="lastName">Last Name
          <input type="text" name="lastName" value="<%= lastName %>" placeholder="lastName">
        </label>
        <label for="phoneNumber">Phone Number
          <input type="text" name="phoneNumber" value="<%= phoneNumber %>" placeholder="phoneNumber">
        </label>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>

        <% if(hasError) { %>
          <div class="row">
            <div class="col-md-6 errorBlock">
              <% for(var item in error) { %>
                <strong><h6><%= item %></h6></strong>
                <ul>
                <% for(var i = 0; i < error[item].length; i++) { %>
                    <li>
                      <i>
                        <%= error[item][i].message %>
                      </i>
                    </li>
                <% } %>
                </ul>
              <% } %>
            </div>
          </div>
        <% } %>

    <div class="col-md-2">

    </div>
</div>
<% include partials/footer %>
